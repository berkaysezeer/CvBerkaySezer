@using CvBerkaySezer.Models
@model Domain
@{
    ViewBag.Title = "AddDomain";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Domain Bilgisi</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Admin</a></li>
                    <li class="breadcrumb-item active">Domain Bilgisi</li>
                </ol>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                @using (Html.BeginForm("AddDomain", "Client"))
                {
                    @Html.HiddenFor(x => x.ClientId, new { Value = ViewBag.ClientId })

                    <div class="form-row">
                        <div class="col-md-4 form-group">
                            @Html.LabelFor(x => x.ServiceProviderId, "Servis Sağlayıcısı", new { @class = "" })
                            @Html.DropDownList("ServiceProviderId", (IEnumerable<SelectListItem>)ViewBag.ServiceProviders, "Seçiniz", new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.ServiceProviderId, "", new { @class = "small", @style = "color:red" })
                        </div>
                        <div class="form-group col-md-4">
                            @Html.LabelFor(x => x.Title, "Başlık", new { @class = "" })
                            @Html.TextBoxFor(x => x.Title, "", new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Title, "", new { @class = "small", @style = "color:red;" })
                        </div>

                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-8">
                            @Html.LabelFor(x => x.Description, "Açıklama", new { @class = "" })
                            @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Description, "", new { @class = "small", @style = "color:red;" })
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-4 form-group">
                            @Html.LabelFor(x => x.DomainName, "Alan Adı", new { @class = "" })
                            @Html.TextBoxFor(x => x.DomainName, "", new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.DomainName, "", new { @class = "small", @style = "color:red;" })
                        </div>
                        <div class="col-md-4 form-group">
                            @Html.LabelFor(x => x.NameServer1, "Nameserver1", new { @class = "" })
                            @Html.TextBoxFor(x => x.NameServer1, "", new { @class = "form-control" })
                        </div>
                        <div class="col-md-4 form-group">
                            @Html.LabelFor(x => x.NameServer2, "Nameserver2", new { @class = "" })
                            @Html.TextBoxFor(x => x.NameServer2, "", new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-4 form-group">
                            @Html.LabelFor(x => x.RegistrationDate, "Kayıt Tarihi", new { @class = "" })
                            @Html.TextBoxFor(model => model.RegistrationDate, "{0:dd.MM.yyyy}", new { type = "date", @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.RegistrationDate, "", new { @class = "small", @style = "color:red" })
                        </div>
                        <div class="col-md-4 form-group">
                            @Html.LabelFor(x => x.NextPaymentDate, "Sonraki Ödeme Tarihi", new { @class = "" })
                            @Html.TextBoxFor(model => model.NextPaymentDate, "{0:dd.MM.yyyy}", new { type = "date", @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.NextPaymentDate, "", new { @class = "small", @style = "color:red" })
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-4 form-group">
                            @Html.LabelFor(x => x.Amount, "Tutar", new { @class = "" })
                            @Html.TextBoxFor(m => m.Amount, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Amount, "", new { @class = "small", @style = "color:red" })
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-4 form-group">
                            <button type="submit" class="btn btn-primary btn-block">Ekle</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>