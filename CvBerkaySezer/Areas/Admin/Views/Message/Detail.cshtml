@using CvBerkaySezer.Models
@model Contact
@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark"></h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Admin</a></li>
                    <li class="breadcrumb-item active">Mesaj Detayı</li>
                </ol>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-12">
                <div class="card card-primary card-outline">
                    <div class="card-header">
                        <h3 class="card-title">Mesaj Detayı</h3>

                        <div class="card-tools">
                            <a href="/Admin/Message/PreviousMessage/@Model.Id" class="btn btn-tool" data-toggle="tooltip" title="Önceki"><i class="fas fa-chevron-left"></i></a>
                            <a href="/Admin/Message/NextMessage/@Model.Id" class="btn btn-tool" data-toggle="tooltip" title="Sonraki"><i class="fas fa-chevron-right"></i></a>
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body p-0">
                        <div class="mailbox-read-info">
                            <h5>@Model.Subject</h5>
                            <h6>
                                Kimden: @Model.Name @Model.Surname
                                <span class="mailbox-read-time float-right">@Model.Time.ToString("dd.MM.yyyy HH:mm")</span>
                            </h6>
                        </div>
                        <div class="mailbox-read-message">
                            @Model.Message
                        </div>
                        <!-- /.mailbox-read-message -->
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer bg-white">
                    </div>
                    <!-- /.card-footer -->
                    <div class="card-footer">
                        <button type="button" class="btn btn-default"><i class="far fa-trash-alt"></i> Sil</button>
                        <button type="button" class="btn btn-default"><i class="fas fa-print"></i> Okunmadı Olarak İşaretle</button>
                    </div>
                    <!-- /.card-footer -->
                </div>
            </div>
        </div>
    </div>
</div>

