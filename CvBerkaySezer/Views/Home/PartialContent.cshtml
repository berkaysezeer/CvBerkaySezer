@using CvBerkaySezer.Models
@model Content
<div class="untree_co-section pb-0" id="about-section">
    <div class="container">
        <div class="row justify-content-center mb-3">
            <div class="col-lg-7 mx-auto text-center author-wrap">
                <img src="@Model.ImageUrl" alt="Image" class="img-fluid rounded-circle mb-3">
                <h3 class="text-black h5 font-weight-bold mb-2 gsap-reveal-hero">@Model.Fullname</h3>
                <p class="gsap-reveal-hero">@Model.Title</p>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-7">
                @MvcHtmlString.Create(Model.ContentParagrap)
            </div>
        </div>
    </div>
</div>
