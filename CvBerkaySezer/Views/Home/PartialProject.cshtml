@using CvBerkaySezer.Models
@model List<Project>
<div class="untree_co-section untree_co-section-4 pb-0" id="portfolio-section">
    <div class="container">
        <div class="row mb-5">
            <div class="col-lg-7 text-center mx-auto">
                <h2 class="section-heading gsap-reveal-hero mb-0"><strong>Projeler</strong></h2>
                <div class="wave gsap-reveal-hero">
                    <svg>
                        <path d="M10,10 L50,100 L90,50" stroke="#0389ff"></path>
                    </svg>
                </div>
            </div>
        </div>

        <div class="relative"><div class="loader-portfolio-wrap"><div class="loader-portfolio"></div></div> </div>
        <div id="portfolio-single-holder"></div>

        <div class="portfolio-wrapper">

            <div id="posts" class="row">

                @foreach (var project in Model)
                {
                    <div class="item web branding col-sm-6 col-md-6 col-lg-4 isotope-mb-2">
                        <a href="@project.ProjectUrl" class="portfolio-item ajax-load-page isotope-item gsap-reveal-img" data-id="1">
                            <div class="overlay">
                                <span class="wrap-icon icon-link2"></span>
                                <div class="portfolio-item-content">
                                    <h3>@project.Title</h3>
                                    <p>@project.Tag</p>
                                </div>
                            </div>
                            <img src="@project.ImageUrl" class="lazyload  img-fluid" alt="Images" />
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

