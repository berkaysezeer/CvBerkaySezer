@using CvBerkaySezer.Models
@model Contact
<div class="untree_co-section" id="contact-section">
    <div class="container">
        <div class="row mb-5">
            <div class="col-lg-7 text-center mx-auto">
                <h2 class="section-heading gsap-reveal-hero mb-0"><strong>İletişim</strong></h2>
                <div class="wave gsap-reveal-hero">
                    <svg>
                        <path d="M10,10 L50,100 L90,50" stroke="#0389ff"></path>
                    </svg>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                @using (Html.BeginForm("Contact", "Home", FormMethod.Post))
                {
                    <div class="row">
                        <div class="col-lg-6 form-group">
                            @Html.TextBoxFor(x => x.Name, "", new { @class = "form-control", @placeholder = "Ad", @maxlength = "50" })
                            @Html.ValidationMessageFor(x => x.Name, "", new { @class = "small", @style = "color:red;" })
                        </div>
                        <div class="col-lg-6 form-group">
                            @Html.TextBoxFor(x => x.Surname, "", new { @class = "form-control", @placeholder = "Soyad", @maxlength = "50" })
                            @Html.ValidationMessageFor(x => x.Surname, "", new { @class = "small", @style = "color:red;" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 form-group">
                            @Html.TextBoxFor(x => x.Email, "", new { @class = "form-control", @placeholder = "E-posta", @type = "email", @maxlength = "50" })
                            @Html.ValidationMessageFor(x => x.Email, "", new { @class = "small", @style = "color:red;" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 form-group">
                            @Html.TextAreaFor(x => x.Message, new { @class = "form-control", @placeholder = "Mesajını yaz...", @rows = "7", @cols = "30", @maxlength = "1056" })
                            @Html.ValidationMessageFor(x => x.Message, "", new { @class = "small", @style = "color:red;" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 form-group">
                            <input type="submit" class="btn btn-black" value="Gönder">
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
