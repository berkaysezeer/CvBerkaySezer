@using CvBerkaySezer.Models
@model List<Skill>

<div class="untree_co-section pb-0" id="skills-section">
    <div class="container">
        <div class="row mb-4">
            <div class="col-lg-7 text-center mx-auto">
                <h2 class="section-heading gsap-reveal-hero mb-0"><strong>Yetenekler</strong></h2>
                <div class="wave gsap-reveal-hero">
                    <svg>
                        <path d="M10,10 L50,100 L90,50" stroke="#0389ff"></path>
                    </svg>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var skill in Model)
            {
                <div class="col-6 col-sm-6 col-md-6 col-lg-3 mb-4">
                    <div class="service text-center">
                        <div class="gsap-reveal-hero mb-3">
                            <span class="icon-service"><img src="@skill.ImageUrl" alt="Image" class="img-fluid"></span>
                        </div>
                        <p class="gsap-reveal-hero">@skill.Title</p>
                    </div>
                </div>
            }

        </div>
    </div>
</div>

